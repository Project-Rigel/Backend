{
  "name": "functions",
  "version": "0.0.1",
  "description": "Functions for firebase project",
  "author": "Green and in TEAM",
  "scripts": {
    "build": "tsc",
    "serve": "tsc -w | firebase emulators:start --only functions,firestore",
    "serve:no-firestore": "tsc -w | firebase emulators:start --only functions",
    "serve:debug": "npm run serve -- --inspect-functions",
    "serve:debug:no-firestore": "npm run serve:no-firestore -- --inspect-functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log",
    "lint": "eslint src/**/*.ts --fix",
    "format": "prettier src/**/*.ts --write",
    "test": "jest",
    "test:watch": "jest --watchAll"
  },
  "engines": {
    "node": "10"
  },
  "main": "lib/src/index.js",
  "dependencies": {
    "class-transformer": "^0.3.1",
    "class-validator": "^0.12.2",
    "firebase-admin": "^8.12.1",
    "firebase-functions": "^3.6.1",
    "firebase-tools": "^8.11.2",
    "moment": "^2.26.0",
    "reflect-metadata": "^0.1.13"
  },
  "devDependencies": {
    "@types/jest": "^26.0.14",
    "@typescript-eslint/eslint-plugin": "^3.7.1",
    "@typescript-eslint/parser": "^3.7.1",
    "eslint": "6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-import": "2.20.1",
    "firebase-functions-test": "^0.2.0",
    "husky": "^4.3.0",
    "jest": "^26.4.2",
    "lint-staged": "^10.4.0",
    "organize-imports-cli": "^0.7.0",
    "prettier": "^2.0.5",
    "ts-jest": "^26.4.1",
    "ts-mockito": "^2.6.1",
    "typescript": "^3.9.7"
  },
  "private": true,
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run build && npm run test"
    }
  },
  "lint-staged": {
    "src/**/*.{ts,js,css,html}": [
      "prettier --write"
    ],
    "*.ts": [
      "organize-imports-cli",
      "prettier --write"
    ]
  }
}
